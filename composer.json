{
    "name": "mountbit/pague-dev-php-sdk",
    "description": "SDK do pague.dev para PHP",
    "keywords": [
        "MountBit",
        "pague-dev-php-sdk"
    ],
    "homepage": "https://github.com/mountbit/pague-dev-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Gianluca Bine",
            "email": "gian@mountbit.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "saloonphp/saloon": "^3.14.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MountBit\\PagueDev\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MountBit\\PagueDev\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage --exclude-group integration",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --exclude-group integration",
        "test-integration": "vendor/bin/phpunit --group integration",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
